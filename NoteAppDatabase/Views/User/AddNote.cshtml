@model Proje5.Models.NoteViewModel

@{
    ViewData["Title"] = "Add Note";
}

<h1>Not Ekle</h1>

<form asp-action="AddNote" method="post">
    <div class="form-group">
        <label asp-for="Description">Not</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

<div class="mt-3">
    <a class="btn btn-secondary" asp-area="" asp-controller="User" asp-action="UserMenu">Ana Menü</a>
</div>
