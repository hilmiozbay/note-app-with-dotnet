@model UserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h2>Kullancı Bilgisi Güncelle</h2>

<form asp-action="UpdateUser" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Firstname">İsim:</label>
        <input type="text" class="form-control" asp-for="Firstname" required />
    </div>
    <div class="form-group">
        <label for="Surname">Soyisim:</label>
        <input type="text" class="form-control" asp-for="Surname" required />
    </div>
    <div class="form-group">
        <label for="MailAddress">Email:</label>
        <input type="email" class="form-control" asp-for="MailAddress" required />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="User" asp-action="UserMenu">Menü</a>
</div>
