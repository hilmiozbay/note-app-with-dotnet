@model List<Users>

@{
    ViewData["Title"] = "User List";
}

<h1>Kullanıcılar</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Email</th>
            <th>Aktif mi?</th>
            <th>Admin mi?</th>
            <th>Oluşturulma Tarihi</th>
            <th>Son Güncelleme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Firstname</td>
                <td>@user.Surname</td>
                <td>@user.MailAddress</td>
                <td>@user.IsActive</td>
                <td>@user.IsAdmin</td>
                <td>@user.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@user.LastUpdateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <form asp-action="DeactivateUser" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn @(user.IsActive ? "btn-danger" : "btn-success")">
                            @(user.IsActive ? "Pasif Et" : "Aktif et")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Admin" asp-action="AdminMenu">Menü</a>
</div>



<div class="mt-3">
    <a class="btn" style="background-color: red; color: white;" asp-controller="Home" asp-action="Index">Çıkış Yap</a>
</div>